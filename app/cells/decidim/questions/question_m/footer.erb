<% if has_link_to_resource? %>
  <div class="card__footer">
    <div class="card__support">
      <% if actionable? %>
        <% if !current_settings.votes_hidden? %>
          <%= cell(
            "decidim/progress_bar",
            progress_bar_progress,
            total: progress_bar_total,
            units_name: current_settings.votes_weight_enabled? ? "decidim.questions.questions.vote_weight.count" : "decidim.questions.questions.vote_weight.count",
            element_id: "question-#{model.id}-votes-count",
            subtitle_text: progress_bar_subtitle_text,
            small: true
          ) %>
        <% end %>
        <% if current_settings.votes_weight_enabled? %>
          <%= render partial: "decidim/questions/questions/vote_weight.html", locals: { question: model, from_questions_list: true } %>
        <% elsif current_settings.votes_enabled? %>
          <%= render partial: "decidim/questions/questions/vote_button.html", locals: { question: model, from_questions_list: true } %>
        <% end %>
      <% else %>
        <div class="card__support__data"></div>
        <%= link_to t("decidim.questions.questions.question.view_question"), resource_path, class: "card__button button--sc light button small secondary" %>
      <% end %>
    </div>
  </div>
<% end %>
