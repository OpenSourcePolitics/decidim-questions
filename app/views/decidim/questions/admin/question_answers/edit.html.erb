<%= stylesheet_link_tag "decidim/questions/admin/questions" %>
<%= render "decidim/questions/admin/shared/info_question" %>
<%= decidim_form_for(@form, url: question_question_answer_path(question, @form), html: { class: "form edit_question_answer" }) do |f| %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title"><%= t ".title", title: question.title %></h2>
    </div>

    <div class="card-section">
      <div class="row column no-field-label">
        <%= f.collection_radio_buttons :state,
              @form.states(question.question_type, current_user_role, question.state),
              :first,
              :last,
              prompt: true
        %>
      </div>

      <% if question.question_type == 'question' %>
        <%= render partial: "decidim/questions/admin/shared/forward_question", locals: {form: f} %>
      <% end %>

      <% if allowed_to? :answer, :question %>
        <div id="answer_body" class="row column">
          <%= f.translated :editor, :answer, autofocus: true, rows: 15 %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="button--double form-general-submit">
    <%= f.submit t(".answer_question") %>
  </div>
<% end %>

<%= javascript_include_tag "decidim/questions/admin/form" %>
