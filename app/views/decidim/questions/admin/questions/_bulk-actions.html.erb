<div class="flex--cc flex-gap--1">
  <%= render partial: "decidim/questions/admin/questions/bulk_actions/dropdown" %>

  <div id="js-other-actions-wrapper">
    <% if component_settings.participatory_texts_enabled? %>
      <%= link_to t("actions.participatory_texts", scope: "decidim.questions"), participatory_texts_path, id: "participatory_texts", class: "button tiny button--simple" %>
    <% end %>
    <%= link_to t("actions.import", scope: "decidim.questions", name: t("models.question.name", scope: "decidim.questions.admin")), new_questions_import_path, class: "button tiny button--simple" if allowed_to? :import, :questions %>

    <% if allowed_to? :create, :question %>
      <%= link_to t("actions.new", scope: "decidim.questions"), new_question_path, class: "button tiny button--simple" %>
    <% end %>

    <%= export_dropdown %>
  </div>

  <%= render partial: "decidim/questions/admin/questions/bulk_actions/recategorize" %>
  <%= render partial: "decidim/questions/admin/questions/bulk_actions/merge" %>
  <%= render partial: "decidim/questions/admin/questions/bulk_actions/split" %>
</div>
