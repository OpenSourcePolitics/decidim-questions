<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">

    <div class="row column no-field-label">
      <%= form.collection_radio_buttons :question_type, [
          ["question", t("question", scope: "decidim.questions.shared.type").capitalize],
          ["opinion", t("opinion", scope: "decidim.questions.shared.type").capitalize],
          ["contribution", t("contribution", scope: "decidim.questions.shared.type").capitalize]
        ], :first, :last, prompt: true %>
    </div>

    <%= render partial: "decidim/questions/admin/shared/forward_question", locals: {form: form} %>

    <div class="row column">
      <%= form.text_field :title %>
    </div>

    <div class="row column">
      <%= form.text_area :body, rows: 10 %>
    </div>

    <% if component_settings.geocoding_enabled? %>
      <div class="row column">
        <%= form.text_field :address %>
      </div>
    <% end %>

    <% if @form.categories&.any? %>
      <div class="row column">
        <%= form.categories_select :category_id, @form.categories, prompt: t(".select_a_category") %>
      </div>
    <% end %>

    <% if current_participatory_space.has_subscopes? %>
      <div class="row column">
        <%= scopes_picker_field form, :scope_id %>
      </div>
    <% end %>

    <% if component_settings.attachments_allowed? %>
      <div class="row column">
        <fieldset>
          <legend><%= t(".attachment_legend") %></legend>
          <%= form.fields_for :attachment, @form.attachment do |form| %>
            <div class="row column">
              <%= form.text_field :title %>
            </div>

            <div class="row column">
              <%= form.upload :file, optional: false %>
            </div>
          <% end %>
        </fieldset>
      </div>
    <% end %>
  </div>
</div>
