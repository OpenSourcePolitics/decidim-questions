<tr data-id="<%= question.id %>">
<td>
  <%= check_box_tag "question_ids_s[]", question.id, false, class: "js-check-all-question js-question-list-check  js-question-id-#{question.id}" %><br />
</td>
<td>
  <%= question.reference %><br />
</td>
<td>
  <%= t(question.question_type, scope: "decidim.questions.shared.type").capitalize %><br />
</td>
<td>
  <%= question.title %><br />
</td>
<td>
  <% if question.category %>
    <%= translated_attribute question.category.name %>
  <% end %>
</td>

<td>
  <strong class="<%= question_state_css_class question.state %>">
    <%= humanize_question_state question.state %>
  </strong>
</td>

<td>
  <%= l question.created_at, format: :decidim_short %>
</td>

<td class="table-list__actions">
  <% if allowed_to? :create, :question_note %>
    <%= icon_link_to "chat", question_question_notes_path(question_id: question.id), t("actions.private_notes", scope: "decidim.questions"), class: "action-icon--index-notes" %>
  <% end %>

  <% if allowed_to? :answer, :question, question: question %>
   <%= icon_link_to "comment-square", edit_question_question_answer_path(question_id: question.id, id: question.id), t("actions.answer", scope: "decidim.questions"), class: "action-icon--edit-answer" %>
 <% end %>
 <%= icon_link_to "eye", resource_locator(question).path, t("actions.preview", scope: "decidim.questions.admin"), class: "action-icon--preview", target: :blank %>
</td>
</tr>
