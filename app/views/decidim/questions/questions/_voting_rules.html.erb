<% if votes_enabled? && (vote_limit_enabled? || threshold_per_question_enabled? || question_limit_enabled? || can_accumulate_supports_beyond_threshold?) %>
  <div class="row column">
    <div class="callout secondary voting-rules">
      <div class="row">
        <div class="columns medium-8 large-9">
          <h3 class="heading3"><%= t(".title") %></h3>
          <ul>
            <% if vote_limit_enabled? %>
              <li><%= t(".vote_limit.description", limit: component_settings.vote_limit) %></li>
            <% end %>

            <% if question_limit_enabled? %>
              <li><%= t(".question_limit.description", limit: question_limit) %></li>
            <% end %>

            <% if threshold_per_question_enabled? %>
              <li><%= t(".threshold_per_question.description", limit: threshold_per_question) %></li>
            <% end %>

            <% if can_accumulate_supports_beyond_threshold? %>
              <li><%= t(".can_accumulate_supports_beyond_threshold.description", limit: threshold_per_question) %></li>
            <% end %>
          </ul>
        </div>
        <% if current_user_can_vote? %>
          <div class="columns medium-4 large-3">
            <div class="card card--nomargin text-center remaining-votes-counter">
              <div class="card__content">
                <span class="definition-data__title"><%= t(".vote_limit.left", limit: component_settings.vote_limit) %></span>
                <%= render partial: "remaining_votes_count" %>
                <span class="extra__suport-text"><%= t(".vote_limit.votes") %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
