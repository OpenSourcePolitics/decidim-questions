<div class="row">
  <%= render partial: "wizard_aside" %>

  <div class="columns large-6">
    <%= render partial: "wizard_header" %>

    <div class="card">
      <div class="card__content">
        <%= decidim_form_for(@form, url: compare_questions_path, method: :get) do |form| %>
          <div class="field">
            <%= form.radio_button :question_type, "question", label: t("question", scope: "decidim.questions.shared.type"), require: true, checked: true %>
            <%= form.radio_button :question_type, "opinion", label: t("opinion", scope: "decidim.questions.shared.type"), require: true %>
            <%= form.radio_button :question_type, "contribution", label: t("contribution", scope: "decidim.questions.shared.type"), require: true %>
          </div>
          <div class="field">
            <%= form.text_field :title %>
          </div>
          <div class="field">
            <%= form.text_area :body, rows: 10 %>
          </div>

          <div class="actions">
            <%= form.submit t(".send"), class: "button expanded mt-s mb-none", data: { disable: true } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="columns large-3"></div>
</div>

<%= javascript_include_tag "decidim/questions/add_question" %>
