<% if questions.any? %>
    <section class="section row collapse highlighted_questions">
      <h2 class="section-heading"><%= t(".questions") %></h2>

      <%= cell(
        "decidim/collapsible_list",
        questions,
        cell_options: {},
        list_class: "row small-up-1 medium-up-2 large-up-3 card-grid",
        size: questions.count
        ) %>
    </section>
<% end %>
