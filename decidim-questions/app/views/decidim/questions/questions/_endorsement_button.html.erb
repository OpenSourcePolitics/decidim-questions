<div id="question-<%= question.id %>-endorsement-button<%= user_group&.id ? "-#{user_group.id}" : "" %>">
  <% if !current_user %>
      <%= action_authorized_button_to :endorse, endorse_label, current_endorsement_url, resource: question, class: "button #{endorsement_button_classes(from_questions_list)} secondary" %>
  <% else %>
    <% if question.endorsed_by?(current_user, user_group) %>
      <%= action_authorized_button_to :endorse, unendorse_label, current_endorsement_url, resource: question, method: :delete, remote: true, class: "button #{endorsement_button_classes(from_questions_list)} success", id: "endorsement_button" %>
    <% else %>
      <%= action_authorized_button_to :endorse, endorse_label, current_endorsement_url, resource: question, remote: true, data: {}, class: "button #{endorsement_button_classes(from_questions_list)} secondary" %>
    <% end %>
  <% end %>
</div>
